# ============================================
# Configuración de Apotheclean - Template
# ============================================
# Copiar este archivo a .env y configurar los valores

# ----- JWT -----
# IMPORTANTE: Cambiar esta clave en producción
JWT_SECRET_KEY="cambiar_esta_clave_en_produccion"

# ----- Flask -----
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False

# ----- Base de datos SQLite -----
# Ruta donde se almacenará la base de datos
# En Docker: /app/data/farmacia.db
# Local: farmacia.db
DATABASE_PATH=/app/data/farmacia.db

# ----- Redis -----
# En Docker: redis (nombre del servicio)
# Local: localhost
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=tu_password_redis

# ----- Logging -----
LOG_LEVEL=INFO
